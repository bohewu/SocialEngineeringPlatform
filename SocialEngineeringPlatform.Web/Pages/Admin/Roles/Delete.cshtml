@page "{id}"
@model SocialEngineeringPlatform.Web.Pages.Admin.Roles.DeleteModel

@{
    ViewData["Title"] = "刪除角色";
    // Layout = "_AdminLayout"; // 可選
}

<h1>@ViewData["Title"]</h1>

@* 根據後端檢查結果顯示不同的警告訊息 *@
@if (Model.CanDelete)
{
    <h3 class="text-danger">@Model.DeletionWarningMessage</h3>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">無法刪除！</h4>
        <p>@Model.DeletionWarningMessage</p>
    </div>
}

<div>
    <h4>角色資訊</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoleToDelete.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleToDelete.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoleToDelete.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleToDelete.Id)
        </dd>
    </dl>

    @* 刪除確認表單 *@
    <form method="post">
        @* 隱藏欄位傳遞 Id (雖然已在路由中，但表單內有時也需要) *@
        <input type="hidden" asp-for="RoleToDelete.Id" />
        @* 如果 CanDelete 為 true 才顯示刪除按鈕 *@
        @if (Model.CanDelete)
        {
            <button type="submit" class="btn btn-danger">確認刪除</button> @:|
        }
        <a asp-page="./Index" class="btn btn-secondary ms-2">返回列表</a>
    </form>
</div>