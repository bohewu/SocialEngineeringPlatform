@page
@model SocialEngineeringPlatform.Web.Pages.Admin.Roles.CreateModel

@{
    ViewData["Title"] = "建立新角色";
    // Layout = "_AdminLayout"; // 可選
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h4>建立一個新的角色。</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.RoleName" class="form-control" autocomplete="off" aria-required="true" placeholder="請輸入角色名稱" />
                <label asp-for="Input.RoleName"></label>
                <span asp-validation-for="Input.RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">建立角色</button>
            <div class="mt-3 text-center">
                <a asp-page="./Index" class="btn btn-link">返回列表</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}