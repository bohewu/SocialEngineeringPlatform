@page "{id:int?}"
@model SocialEngineeringPlatform.Web.Pages.MailTemplateCategories.DeleteModel

@{
    ViewData["Title"] = "刪除範本分類";
    // Layout = "_AdminLayout"; // 可選
}

<h1>@ViewData["Title"]</h1>

@* 警告訊息 *@
<h3 class="text-danger">您確定要刪除這個範本分類嗎？</h3>
<div>
    <h4>範本分類</h4>
    <hr />
    @* 顯示要刪除的資料 *@
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MailTemplateCategory.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MailTemplateCategory.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MailTemplateCategory.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MailTemplateCategory.Description)
        </dd>
    </dl>

    @* 刪除確認表單 *@
    <form method="post">
        @* 隱藏欄位傳遞 Id *@
        <input type="hidden" asp-for="MailTemplateCategory.Id" />
        @* 確認刪除按鈕 *@
        <button type="submit" class="btn btn-danger">確認刪除</button> |
        @* 取消按鈕 *@
        <a asp-page="./Index" class="btn btn-secondary">取消</a>
    </form>
</div>