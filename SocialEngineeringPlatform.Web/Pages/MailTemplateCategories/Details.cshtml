@page "{id:int?}"
@model SocialEngineeringPlatform.Web.Pages.MailTemplateCategories.DetailsModel

@{
    ViewData["Title"] = "範本分類詳細資料";
    // Layout = "_AdminLayout"; // 可選
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>範本分類</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @* 使用 DisplayNameFor 顯示欄位名稱 (來自 Model 的 [Display] Attribute) *@
            @Html.DisplayNameFor(model => model.MailTemplateCategory.Name)
        </dt>
        <dd class="col-sm-10">
            @* 使用 DisplayFor 顯示欄位值 *@
            @Html.DisplayFor(model => model.MailTemplateCategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MailTemplateCategory.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MailTemplateCategory.Description)
        </dd>
        @* 可以選擇性地顯示其他唯讀資訊，例如建立/更新時間 *@
        @*
        <dt class="col-sm-2">
            建立時間
        </dt>
        <dd class="col-sm-10">
            @Model.MailTemplateCategory.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
        *@
    </dl>
</div>
<div>
    @* 編輯按鈕，連結到 Edit 頁面並傳遞 Id *@
    <a asp-page="./Edit" asp-route-id="@Model.MailTemplateCategory.Id" class="btn btn-primary">編輯</a> |
    @* 返回列表連結 *@
    <a asp-page="./Index" class="btn btn-secondary">返回列表</a>
</div>
